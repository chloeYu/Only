<Context> 
<Resource 
	name="jdbc/OracleDB" 
	auth="Container" 
	type="javax.sql.DataSource" 
	username="only" 
	password="only" 
	driverClassName="oracle.jdbc.driver.OracleDriver" 
	factory="org.apache.tomcat.dbcp.dbcp2.BasicDataSourceFactory" 
	url="jdbc:oracle:thin:@127.0.0.1:1521:orcl1" 
	maxActive="10" 
	maxIdle="2"/> 	
</Context>